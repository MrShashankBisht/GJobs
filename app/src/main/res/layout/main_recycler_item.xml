<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"
        android:id="@+id/main_recycler_item_guid_line" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/forground"
        android:singleLine="false"
        android:textSize="18sp"
        android:text="All Govt Jobs Will come here "
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/main_recycler_item_guid_line"
        android:id="@+id/main_recycler_item_title_text" />
    <View
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:id="@+id/main_recycler_item_text_view_bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/main_recycler_item_title_text"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/forground"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/main_recycler_item_text_view_bottom_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:textSize="16sp"
        android:text="All Govt Jobs"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:id="@+id/main_recycler_item_sub_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_recycler_item_sub_title"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/calander"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/recycler_item_image_view_1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            android:text="12/09/2020"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/recycler_item_image_view_1"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/main_recycler_item_last_date_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/main_recycler_item_next_image_btn"
        android:src="@drawable/next"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_recycler_item_guid_line" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="5dp"
        android:text="Detail"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_recycler_item_next_image_btn"
        app:layout_constraintStart_toEndOf="@+id/main_recycler_item_guid_line" />

</androidx.constraintlayout.widget.ConstraintLayout>